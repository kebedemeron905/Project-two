<h1><a class= "showheading" href="/">Bookshel<span class="v">V</span></a></h1>


 <img class="showbookcover" src={{book.url}} alt="book imgs">

<div >
<a class="showedit" href="edit/{{book.id}}"><button >Edit</button></a>
</div>


<form action="/{{book._id}}?_method=delete" method="post">
  <input class="showremove" type="submit" value="Remove">
</form>


<div class="showproperties">
<h2 class= "titleheading">{{book.title}}</h2>
<h3 class= "propertiesfont"> Author: {{book.author}} </h3>
<h3 class= "propertiesfont"> Genera: {{book.genera}} </h3>
<h3 class= "propertiesfont"> Published: {{book.published}} </h3>
<h3 class= "propertiesfont"> Reflection: {{book.reflection}} </h3>
</div>


<h2>Read it? Share your thoughts or favourite quotes below:</h2>
 {{#each book.comments}}
 
  <p>{{name}} rated it:   
    <span class="fa fa-star checked"></span>
    <span class="fa fa-star checked"></span>
    <span class="fa fa-star checked"></span>
    <span class="fa fa-star"></span>
    <span class="fa fa-star"></span>
  </p> 
   <p>{{comment}}</p> 
   <form action="/{{../book.id}}/{{id}}?_method=delete" method="post">
<input type="submit" value="Remove comment"/>
</form>
{{/each}}


<form action="/{{book._id}}" method="post">
<label>Comment: </label>
<input type="text" name="comment">
<label>Name:</label>
<input type="text" name="name">
<input class="submit" type="submit" value="Add comment">
</form>

</form>

